{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@Components/*": ["./src/components/*"],
      "@Components": ["./src/components"],
      "@Constants": ["./src/constants"],
      "@Constants/*": ["./src/constants/*"],
      "@Modules/*": ["./src/modules/*"],
      "@Modules": ["./src/modules"],
      "@Services": ["./src/services"],
      "@Services/*": ["./src/services/*"],
      "@Hooks": ["./src/hooks"],
      "@Hooks/*": ["./src/hooks/*"],
      "@Styles/*": ["./src/styles/*"],
      "@Styles": ["./src/styles"],
      "@Utils/*": ["./src/utils/*"],
      "@Utils": ["./src/utils"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
